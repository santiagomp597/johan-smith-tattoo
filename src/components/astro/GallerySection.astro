---
// src/components/astro/GallerySection.astro
import TattooCarousel from "../react/TattooCarousel.jsx";
import separatorImg from "../../assets/separator-orange.png";
import { Image } from "astro:assets";

const separator = "separador de secciones";
---

<style is:global>
    .gallery-wrapper .container {
        padding: 4rem 1rem;
        margin: 0 auto;
    }

    .gallery-wrapper .heading {
        padding: 1rem 0;
        font-size: 3.5rem;
        text-align: center;
    }

    .gallery-wrapper .swiper_container {
        height: 52rem;
        padding: 2rem 0;
        position: relative;
    }

    .gallery-wrapper .swiper-slide {
        width: 37rem;
        height: 42rem;
        position: relative;
    }

    @media (max-width: 500px) {
        .gallery-wrapper .swiper_container {
            width: 23rem !important;
            height: 47rem;
        }
        .gallery-wrapper .swiper-slide {
            width: 23rem !important;
            height: 36rem !important;
        }
        .gallery-wrapper .swiper-slide img {
            width: 23rem !important;
            height: 36rem !important;
        }
    }

    .gallery-wrapper .swiper-slide img {
        height: 30rem;
        border-radius: 1.5rem;
        object-fit: cover;
    }

    .gallery-wrapper .slider-controler {
        position: relative;
        bottom: 2rem;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .gallery-wrapper .slider-controler .swiper-button-next {
        left: 58% !important;
        transform: translateX(-58%) !important;
    }

    @media (max-width: 990px) {
        .gallery-wrapper .slider-controler .swiper-button-next {
            left: 70% !important;
            transform: translateX(-70%) !important;
        }
    }

    @media (max-width: 450px) {
        .gallery-wrapper .slider-controler .swiper-button-next {
            left: 80% !important;
            transform: translateX(-80%) !important;
        }
    }

    @media (max-width: 990px) {
        .gallery-wrapper .slider-controler .swiper-button-prev {
            left: 30% !important;
            transform: translateX(-30%) !important;
        }
    }

    @media (max-width: 450px) {
        .gallery-wrapper .slider-controler .swiper-button-prev {
            left: 20% !important;
            transform: translateX(-20%) !important;
        }
    }

    .gallery-wrapper .slider-arrow {
        background: var(--white);
        width: 3.5rem;
        height: 3.5rem;
        border-radius: 50%;
        left: 42%;
        transform: translateX(-42%);
        filter: drop-shadow(0px 8px 24px rgba(18, 28, 53, 0.1));
    }

    .gallery-wrapper .slider-arrow ion-icon {
        font-size: 2rem;
        color: #222224;
    }

    .gallery-wrapper .slider-arrow::after {
        content: "";
    }

    .gallery-wrapper .swiper-pagination {
        position: relative;
        width: 15rem !important;
        bottom: 1rem;
    }

    .gallery-wrapper .swiper-pagination .swiper-pagination-bullet {
        filter: drop-shadow(0px 8px 24px rgba(18, 28, 53, 0.1));
    }

    .gallery-wrapper .swiper-pagination .swiper-pagination-bullet-active {
        background: var(--primary);
    }
</style>

<div class="gallery-wrapper py-8 px-4 md:px-8 bg-transparent">
    <div class="text-center">
        <h2
            class="font-cinzel text-4xl font-bold mb-6 text-orange-400 drop-shadow-lg"
        >
            Mi Trabajo
        </h2>
        <div class="max-w-96 h-auto mb-8 mx-auto">
            <Image
                class="w-full h-auto grayscale hover:grayscale-0 transition duration-300"
                src={separatorImg}
                alt={separator}
            />
        </div>
    </div>
    <TattooCarousel client:load />
</div>
